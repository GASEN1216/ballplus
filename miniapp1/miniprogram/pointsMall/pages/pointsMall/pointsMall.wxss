.mall-container {
  padding: 20rpx;
  background-color: #f9fafc;
  box-sizing: border-box;
  overflow-x: hidden;
}

.header {
  display: flex;
  flex-direction: column; /* 让内部元素垂直排列 */
  align-items: center; /* 垂直居中 */
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 28rpx;
  color: #888;
  margin-top: 10rpx;
}

.products-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  width: 100%;
  box-sizing: border-box;
}

/* 商品卡片 */
.product-card {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column; /* 让内部元素垂直排列 */
  align-items: center; /* 垂直居中 */
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

/* 不同商品类型的样式 */
.product-card.avatar {
  border: 2rpx solid #1cbbb4;
}

.product-card.border {
  border: 2rpx solid #ffd700;
}

.product-card.background {
  border: 2rpx solid #4a90e2;
}

.product-card.item {
  border: 2rpx solid #ff5722;
}

.product-card.title {
  border: 2rpx solid #9c27b0;
}

/* 头像类商品图片 */
.avatar-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%; /* 圆形图片 */
  background-color: #f5f5f5;
}

/* 非头像商品图片 */
.non-avatar-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx; /* 矩形图片的圆角 */
  background-color: #e0e0e0;
  object-fit: contain;
}

.product-name {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 5rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.product-price {
  font-size: 20rpx;
  color: #ff5722;
  margin-bottom: 10rpx;
}

