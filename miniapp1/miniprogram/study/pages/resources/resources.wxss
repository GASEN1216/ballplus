.container {
    padding: 20rpx;
    background: #f5f6fa;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
}

/* 搜索栏样式 */
.search-bar {
    position: relative;
    padding: 20rpx;
    background: #fff;
    border-radius: 16rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
    width: 98%;
    box-sizing: border-box;
}

.search-bar input {
    padding: 10rpx 60rpx 10rpx 20rpx;
    font-size: 28rpx;
}

.search-bar icon {
    position: absolute;
    right: 30rpx;
    top: 50%;
    transform: translateY(-50%);
    color: #999;
}

/* 分类导航样式 */
.category-nav {
    white-space: nowrap;
    padding: 20rpx 0;
    margin-bottom: 20rpx;
}

.category-item {
    display: inline-block;
    padding: 15rpx 30rpx;
    margin-right: 20rpx;
    font-size: 28rpx;
    color: #666;
    background: #fff;
    border-radius: 30rpx;
    transition: all 0.3s;
}

.category-item.active {
    background: #4a90e2;
    color: #fff;
}

/* 资源列表样式 */
.resource-list {
    width: 100%;
    padding: 20rpx;
    min-height: calc(100vh - 120rpx);
    box-sizing: border-box;
}

.resource-item {
    margin-bottom: 30rpx;
    width: 100%;
}

.resource-card {
    background: #fff;
    border-radius: 12rpx;
    overflow: hidden;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
    width: 100%;
}

.cover-wrapper {
    position: relative;
    width: 100%;
    height: 360rpx;
}

.cover-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.type-tag {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    padding: 6rpx 20rpx;
    background: rgba(0,0,0,0.6);
    color: #fff;
    font-size: 24rpx;
    border-radius: 20rpx;
}

.resource-content {
    padding: 20rpx;
    min-height: 200rpx;
    display: flex;
    flex-direction: column;
}

.resource-title {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 12rpx;
    color: #333;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.resource-description {
    font-size: 28rpx;
    color: #666;
    margin-bottom: 20rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    flex: 1;
}

.resource-meta {
    display: flex;
    align-items: center;
    font-size: 24rpx;
    color: #999;
    margin-top: auto;
}

.meta-item {
    display: flex;
    align-items: center;
    margin-right: 30rpx;
}

.meta-icon {
    width: 32rpx;
    height: 32rpx;
    margin-right: 8rpx;
}

.type-icon {
    margin-right: auto;
}

.favorite-btn {
    padding: 0;
    background: none;
    border: none;
    margin-left: auto;
    margin-right: 0;
}

.favorite-icon {
    width: 32rpx;
    height: 32rpx;
}

/* 视频预览样式 */
.video-preview {
    width: 100%;
    height: 300rpx;
    position: relative;
}

.play-icon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100rpx;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.play-icon image {
    width: 80rpx;
    height: 80rpx;
}

/* 收藏按钮样式 */
.favorite-btn {
    display: flex;
    align-items: center;
    padding: 10rpx;
    margin-right: 20rpx;
}

.favorite-btn.active image {
    opacity: 0.8;
}
