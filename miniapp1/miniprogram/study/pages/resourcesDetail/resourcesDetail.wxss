.container {
    padding: 0;
    background: #f5f5f5;
}

/* 视频预览 */
.video-preview {
    position: relative;
    width: 100%;
    height: 400rpx;
}

.resource-image {
    width: 100%;
    height: 100%;
}

.play-icon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100rpx;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.play-icon image {
    width: 80rpx;
    height: 80rpx;
}

/* 资源信息 */
.resource-info {
    padding: 20rpx;
    background: #fff;
    margin-bottom: 20rpx;
}

.resource-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 16rpx;
}

.resource-desc {
    font-size: 28rpx;
    color: #666;
    margin-bottom: 20rpx;
    line-height: 1.5;
}

.resource-meta {
    display: flex;
    align-items: center;
    font-size: 24rpx;
    color: #999;
    justify-content: space-between;
}

.meta-left {
    display: flex;
    align-items: center;
}

.meta-item {
    display: flex;
    align-items: center;
    margin-right: 30rpx;
}

.meta-icon {
    width: 32rpx;
    height: 32rpx;
    margin-right: 8rpx;
}

/* 收藏按钮 */
.favorite-btn {
    display: flex;
    align-items: center;
    padding: 10rpx;
}

.favorite-btn.active image {
    opacity: 0.8;
}

/* 资源内容 */
.resource-content {
    background: #fff;
    padding: 20rpx;
}

.video-player {
    width: 100%;
    height: 400rpx;
    background: #000;
}

.resource-detail {
  background: #f8f8f8;
  min-height: 100vh;
}

.cover-section {
  position: relative;
  width: 100%;
  height: 400rpx;
}

.cover-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.type-tag {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 6rpx 20rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 24rpx;
  border-radius: 6rpx;
}

.content-section {
  position: relative;
  margin-top: -40rpx;
  padding: 40rpx 30rpx;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.header {
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.interaction {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.stats {
  display: flex;
  align-items: center;
}

.stat-item {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
  color: #666;
  font-size: 26rpx;
}

.icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.favorite-btn {
  padding: 16rpx;
  border-radius: 50%;
  background: #f5f5f5;
}

.favorite-btn.active {
  background: #fff0f0;
}

.description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
}

.main-content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.8;
  padding: 20rpx 0;
}

.recommendations {
  padding: 30rpx;
  background: #fff;
  margin-top: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #3cc51f;
}

.recommendation-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.recommendation-item {
  display: flex;
  background: #fff;
  padding: 16rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.thumb {
  width: 200rpx;
  height: 140rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
}

.info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.rec-title {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.rec-stats {
  display: flex;
  gap: 20rpx;
  font-size: 24rpx;
  color: #999;
}
