/* 整体页面 */
.page {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f0f2f5;
  padding: 20rpx;
}

/* 内容区域 */
.content {
  flex: 1;
}

/* 通用卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 头像卡片 */
.avatar-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 2rpx solid #e0e0e0;
}

/* 球号展示卡片 */
.info-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.info-text {
  font-size: 28rpx;
  color: #666;
}

/* 表单卡片 */
/* 表单卡片整体 */
.form-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 表单项布局，每项下方有分割线 */
.form-card .form-item {
  display: flex;
  align-items: center;
  justify-content: space-between; /* 标签和填写区域两端对齐 */
  padding: 15rpx 0;
  border-bottom: 1rpx solid #eaeaea;
}

/* 最后一项无分割线 */
.form-card .form-item:last-child {
  border-bottom: none;
}

/* 标签样式：固定宽度 */
.form-label {
  width: 150rpx;
  font-size: 28rpx;
  color: #333;
}

/* 必填项标记 */
.required .form-label::after {
  content: '*';
  color: #e74c3c;
  margin-left: 5rpx;
}

/* 填写区域样式：输入框、选择器显示及文本域，无边框，右对齐 */
.form-input,
.picker-display {
  flex: 1;
  border: none;
  background-color: transparent;
  font-size: 28rpx;
  color: #333;
  text-align: right;
}

/* 去除输入时默认的轮廓 */
.form-input:focus,
.form-textarea:focus {
  outline: none;
}

/* 文本域高度及禁止调整大小 */
.form-textarea {
  height: 80rpx;
  resize: none;
}


/* 评分卡片 */
/* 简洁优雅的分数展示卡片 */
.score-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin: 20rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.score-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.score-row:last-child {
  margin-bottom: 0;
  border-bottom: none;
}

.score-title {
  font-size: 28rpx;
  color: #555;
}

.score-value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}


/* 保存按钮 */
.save-btn {
  width: 100%;
  background-color: #1cbbb4;
  color: #fff;
  font-size: 32rpx;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
  margin-top: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}
