  background-color: #f5f5f5;
}

.credit-detail-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  padding-bottom: 40px;
}

/* 顶部信誉分概览 */
.credit-overview {
  width: 90%;
  background-color: #4080ff;
  border-radius: 15px;
  padding: 30px 20px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 20px;
  box-shadow: 0 4px 10px rgba(64, 128, 255, 0.2);
}

.credit-score {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.score-value {
  font-size: 40px;
  font-weight: bold;
  color: #fff;
}

.score-label {
  font-size: 14px;
  color: #e0e9ff;
  margin-top: 5px;
}

.credit-level {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.level-label {
  font-size: 14px;
  color: #e0e9ff;
  margin-bottom: 5px;
}

.level-value {
  font-size: 20px;
  font-weight: bold;
  color: #fff;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 5px 15px;
  border-radius: 15px;
}

/* 信誉分说明 */
.credit-explanation, .credit-levels, .credit-history {
  width: 90%;
  background-color: #fff;
  border-radius: 10px;
  padding: 15px;
  margin-bottom: 15px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
  padding-left: 10px;
  border-left: 4px solid #4080ff;
}

.explanation-content {
  padding: 5px;
}

.explanation-item {
  margin-bottom: 15px;
}

.item-title {
  font-size: 14px;
  font-weight: bold;
  color: #4080ff;
  margin-bottom: 5px;
}

.item-content {
  font-size: 13px;
  color: #666;
  line-height: 1.5;
}

/* 信誉分等级 */
.levels-content {
  padding: 10px 5px;
}

.level-item {
  display: flex;
  align-items: center;
  margin-bottom: 12px;
  padding: 8px;
  border-radius: 8px;
  transition: all 0.3s;
}

.current-level {
  background-color: rgba(64, 128, 255, 0.1);
}

.level-dot {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background-color: #ccc;
  margin-right: 10px;
}

.current-level .level-dot {
  background-color: #4080ff;
}

.level-info {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.level-name {
  font-size: 14px;
  color: #333;
  font-weight: bold;
}

.level-range {
  font-size: 12px;
  color: #999;
}

.current-level .level-name, .current-level .level-range {
  color: #4080ff;
}

/* 历史记录 */
.history-list {
  padding: 5px;
  height: 300rpx; /* 固定高度，使内容超出时可滚动 */
  max-height: 300rpx; /* 最大高度 */
  overflow-y: auto; /* 垂直方向溢出时显示滚动条 */
}

/* 定义滚动条样式 */
.history-list::-webkit-scrollbar {
  width: 4px;
  background-color: #f5f5f5;
}

.history-list::-webkit-scrollbar-thumb {
  background-color: #cdcdcd;
  border-radius: 4px;
}

.history-item {
  padding: 12px;
  border-bottom: 1px solid #eee;
}

.history-item:last-child {
  border-bottom: none;
}

.history-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8px;
}

.history-title {
  font-size: 14px;
  font-weight: bold;
  color: #333;
}

.history-time {
  font-size: 12px;
  color: #999;
}

.history-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.history-reason {
  font-size: 13px;
  color: #666;
  flex: 1;
}

.history-change {
  font-size: 15px;
  font-weight: bold;
}

.positive {
  color: #4caf50;
}

.negative {
  color: #f44336;
}

.no-record {
  text-align: center;
  padding: 30px 0;
  color: #999;
  font-size: 14px;
} 