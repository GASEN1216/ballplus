/* 主容器样式 */
.settings-container {
  background-color: #f8f8f8;
  min-height: 100vh;
  padding: 20rpx;
}

/* 设置区块 */
.settings-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

/* 区块标题 */
.section-title {
  font-size: 28rpx;
  color: #888;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 设置选项 */
.settings-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.settings-option:last-child {
  border-bottom: none;
}

/* 选项左侧区域 */
.option-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

/* 选项图标 */
.option-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 箭头图标 */
.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}

/* 选项文字样式 */
.option-text {
  font-size: 30rpx;
  color: #333;
}

/* 切换控制区 */
.toggle-container {
  display: flex;
  align-items: center;
}

/* 选择器文本 */
.picker-text {
  font-size: 28rpx;
  color: #666;
  padding-right: 16rpx;
}

/* 联系客服按钮 */
.contact-btn {
  margin: 0;
  padding: 28rpx 30rpx;
  line-height: normal;
  text-align: left;
  border-radius: 0;
  background-color: #fff;
  width: 100%;
}

.contact-btn::after {
  border: none;
}

/* 退出登录区域 */
.logout-section {
  margin-top: 60rpx;
  padding: 0 30rpx;
}

/* 退出登录按钮 */
.logout-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #fff;
  color: #ff3b30;
  font-size: 32rpx;
  border-radius: 16rpx;
  border: none;
}

/* 版本信息 */
.app-version {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 60rpx;
  padding-bottom: 40rpx;
}
