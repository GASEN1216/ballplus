.comment-detail-container {
  padding: 32rpx;
  background-color: #ffffff;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.title-container {
  margin-bottom: 32rpx;
  box-sizing: border-box;
}

.comment-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  box-sizing: border-box;
}

/* 主评论区域 */
.main-comment {
  display: flex;
  padding: 32rpx;
  background-color: #fff;
  margin-bottom: 32rpx;
}

.main-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.main-info {
  flex: 1;
}

.main-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.main-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.main-time {
  font-size: 24rpx;
  color: #999;
  margin: 8rpx 0;
  display: block;
}

.main-content {
  font-size: 30rpx;
  line-height: 1.5;
  color: #333;
  margin-top: 12rpx;
  display: block;
}

.level-text {
  display: inline-flex;
  align-items: center;
  font-size: 20rpx;
  line-height: 20rpx;
  font-weight: bold;
  padding: 4rpx 8rpx;
  color: #000000;
  background-color: #ffffff;
  border: 1rpx solid #000000;
}

.divider {
  height: 16rpx;
  background-color: #f5f5f5;
  margin: 0 -32rpx;
}

/* 子评论区域 */
.sub-comments {
  padding-top: 32rpx;
}

.sub-comments-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  display: block;
}

.sub-comment-card {
  display: flex;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.sub-comment-card.highlighted {
  background-color: rgba(0, 0, 0, 0.05);
  transform: scale(1.01);
  animation: highlightFade 2s ease;
}

@keyframes highlightFade {
  0% {
    background-color: rgba(0, 0, 0, 0.1);
    transform: scale(1.02);
  }
  50% {
    background-color: rgba(0, 0, 0, 0.05);
    transform: scale(1.01);
  }
  100% {
    background-color: transparent;
    transform: scale(1);
  }
}

.sub-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.sub-info {
  flex: 1;
}

.sub-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.sub-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.sub-time {
  font-size: 24rpx;
  color: #999;
  margin: 8rpx 0;
  display: block;
}

.sub-content {
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
  margin-top: 8rpx;
  display: block;
}

.sub-actions {
  margin-left: auto;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.icon-button-small {
  width: 32rpx;
  height: 32rpx;
  padding: 4rpx;
}

.likes-count-small {
  font-size: 24rpx;
  color: #999;
}

.main-actions {
  display: flex;
  gap: 32rpx;
  margin-top: 16rpx;
}

.action-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.icon-button {
  width: 48rpx;
  height: 48rpx;
}

.action-count {
  font-size: 26rpx;
  color: #999;
  min-width: 20rpx;
  text-align: center;
}

.reply-to {
  color: #576b95;
  font-weight: bold;
  margin-right: 8rpx;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 16rpx 32rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.bottom-normal {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.comment-input {
  flex: 1;
  height: 72rpx;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 32rpx;
  line-height: 72rpx;
  color: #999;
  font-size: 28rpx;
}

.bottom-actions {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.action-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx;
}

.icon-button {
  width: 48rpx;
  height: 48rpx;
}

.action-count {
  font-size: 26rpx;
  color: #999;
  min-width: 20rpx;
  text-align: center;
}

.bottom-reply {
  display: flex;
  align-items: flex-end;
  gap: 16rpx;
}

.reply-container {
  flex: 1;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 16rpx;
}

.reply-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
  display: block;
}

.reply-input {
  width: 100%;
  min-height: 36rpx;
  max-height: 300rpx;
  font-size: 28rpx;
  line-height: 1.5;
  padding: 0;
}

.submit-custom {
  width: 120rpx;
  height: 64rpx;
  background-color: #07c160;
  color: #fff;
  text-align: center;
  line-height: 64rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
}
