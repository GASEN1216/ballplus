.comment-detail-container {
  padding: 32rpx;
  background-color: #f9f9f9;
  font-family: Arial, sans-serif;
  box-sizing: border-box;
}

.title-container {
  margin-bottom: 32rpx;
  box-sizing: border-box;
}

.comment-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  box-sizing: border-box;
}

/* 主评论区域 */
.main-comment {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 32rpx;
  box-sizing: border-box;
}

.main-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  object-fit: cover;
  box-sizing: border-box;
}

.main-info {
  flex: 1;
  box-sizing: border-box;
}

.main-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #007aff;
  box-sizing: border-box;
}

.main-content {
  font-size: 28rpx;
  line-height: 1.5;
  color: #555;
  box-sizing: border-box;
}

.divider {
  height: 1rpx;
  background-color: #ddd;
  margin: 32rpx 0;
  box-sizing: border-box;
}

/* 子评论区域 */
.sub-comments {
  margin-top: 32rpx;
  box-sizing: border-box;
}

.sub-comments-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #333;
  box-sizing: border-box;
}

.sub-comment-card {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
  box-sizing: border-box;
}

.sub-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  object-fit: cover;
  box-sizing: border-box;
}

.sub-info {
  flex: 1;
  box-sizing: border-box;
}

.sub-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #007aff;
  margin-bottom: 8rpx;
  box-sizing: border-box;
}

.sub-content {
  font-size: 26rpx;
  line-height: 1.5;
  color: #555;
  box-sizing: border-box;
}
