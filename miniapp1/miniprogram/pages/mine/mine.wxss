page {
  background-color: #f6f7f9;
}
/* 全局容器 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: env(safe-area-inset-top);
  padding-bottom: 120rpx;
}

/* 顶部固定栏 */
.header {
  width: 92%;
  height: 120rpx;
  background-color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border-radius: 0 0 20rpx 20rpx;
  display: flex;
  align-items: center;
  padding: 20rpx 40rpx;
  position: sticky;
  top: 0;
  z-index: 1000;
}

/* 用户信息 */
.user-info {
  display: flex;
  gap: 20rpx;
  align-items: center;
  flex: 1;
}

/* 用户头像 */
.avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  border: 2rpx solid #f0f0f0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 用户文本信息（昵称和个人信息） */
.user-text {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.nickname {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

/* 顶部按钮区域 */
.header-btns {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.customer-service-btn {
  background: transparent;
  padding: 0;
  margin: 0;
  line-height: normal;
  border: none;
  border-radius:0
}

.customer-service-btn::after {
  border: none;
}

.header-icon {
  width: 64rpx;
  height: 64rpx;
}

.settings-btn {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 主要内容区域 */
.main-content {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 卡片通用样式 */
.card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.03);
}

/* 卡片标题 */
.card-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.card-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}

/* 卡片头部（带箭头） */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 箭头图标 */
.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
  transition: transform 0.3s ease;
}

.arrow-down {
  transform: rotate(90deg);
}

/* 卡片内容 */
.card-content {
  margin-top: 20rpx;
}

/* 活动倒计时卡片 */
.activity-time-card {
  border-left: 8rpx solid #1cbbb4;
}

.activity-remaining-time {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF4C4C;
  margin: 16rpx 0;
  display: block;
}

.activity-summary {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
}

.activity-summary-text {
  font-size: 28rpx;
  color: #333;
}

/* 引言卡片 */
.quote-icon {
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx auto;
  opacity: 0.6;
  display: block;
}

.quote-text {
  font-size: 30rpx;
  color: #5A7D9C;
  font-weight: 500;
  text-align: center;
  display: block;
}

/* 功能菜单区域 */
.menu-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.03);
}

.menu-row {
  display: flex;
  flex-wrap: wrap;
}

.menu-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
}

.menu-text {
  font-size: 24rpx;
  color: #666;
}

/* 活动管理卡片 */
.activity-card {
  border-left: 8rpx solid #ff9645;
}

/* 好友管理卡片 */
.friends-card {
  border-left: 8rpx solid #4ecdc4;
}

/* 球坛管理卡片 */
.forum-card {
  border-left: 8rpx solid #8c7ae6;
}

/* 近期活动列表 */
.recent-activities-list {
  margin-top: 20rpx;
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
  border-top: 1rpx solid transparent;
}

.recent-activities-list.show {
  max-height: 1000rpx;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.recent-activities-list.hide {
  max-height: 0;
}

.recent-activity-item {
  display: flex;
  position: relative;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.recent-activity-item:last-child {
  border-bottom: none;
}

.activity-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.activity-details {
  flex: 1;
  margin-right: 60rpx; /* 为右侧距离预留空间 */
}

.activity-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.activity-meta {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 4rpx;
}

.activity-distance {
  font-size: 24rpx;
  color: #888;
  position: absolute;
  top: 20rpx;
  right: 10rpx;
}

.empty-activities {
  padding: 30rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 26rpx;
  color: #999;
}

/* 登录按钮 */
.login-btn {
  width: 80%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(to right, #1cbbb4, #0081ff);
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 60rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 129, 255, 0.2);
}

/* 等级和经验条 */
.level-exp-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 4rpx;
}

.level-text {
  font-size: 22rpx;
  font-weight: bold;
  color: #0072ff;
  text-shadow: 0 2rpx 4rpx rgba(0, 114, 255, 0.2);
  animation: float 2s infinite alternate;
}

@keyframes float {
  from { transform: translateY(0); }
  to { transform: translateY(-3rpx); }
}

.exp-text {
  font-size: 20rpx;
  color: #666;
  margin-left: auto;
}

.exp-bar-container {
  width: 100%;
  margin-top: 8rpx;
}

.exp-bar {
  width: 100%;
  height: 6rpx;
  background: #eee;
  border-radius: 3rpx;
  overflow: hidden;
}

.exp-progress {
  height: 100%;
  background: linear-gradient(to right, #4f9eff, #00c6ff);
  border-radius: 3rpx;
}