/* 全局容器 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  min-height: 100vh; /* 防止页面塌陷 */
  padding-top: env(safe-area-inset-top);
  box-sizing: border-box;
}

/* 顶部固定栏 */
.header {
  width: 100%;
  height: 100rpx;
  background-color: #ffffff;
  border-bottom: 1px solid #ddd;
  display: flex;
  align-items: center;
  padding: 10rpx 40rpx;
  position: sticky;
  top: 0;
  z-index: 1000;
}

/* 用户信息 */
.user-info {
  display: flex;
  gap: 20rpx; /* 设置子元素之间的间距为 20rpx */
  align-items: center;
}

/* 用户头像 */
.avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-left: 30rpx; /* 头像向右移动 */
}

/* 用户文本信息（昵称和个人信息） */
.user-text {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.nickname {
  font-size: 28rpx;
  color: #333;
}

.settings-btn {
  margin-left: auto;
  padding-right: 20rpx; /* 右侧留白 */
}

.settings-icon {
  width: 80rpx;
  height: 80rpx;
}

/* 活动列表样式 */
.activity-list {
  margin-top: 10px;
}

.activity-card {
  display: flex;
  position: relative;
  gap: 10px;
  padding: 10px;
  margin-bottom: 15px;
  border: 1px solid #ddd;
  border-radius: 10px;
  background-color: #fff;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}
.activity-distance {
  position: absolute;
  top: 10px;
  right: 10px;
  font-size: 14px;
  color: #666;
}
/* 头像样式 */
.activity-avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  border: 1px solid #ccc;
  object-fit: cover;
}

/* 活动信息 */
.activity-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 5px;
}

.activity-name {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.activity-meta {
  font-size: 14px;
  color: #666;
}

.activity-remarks {
  font-size: 14px;
  color: #888;
  margin-top: 5px;
}

.no-activity {
  text-align: center;
  color: #999;
  margin-top: 20px;
  font-size: 16px;
}

/* 包裹所有内容的白板样式 */
.whiteboard {
  background-color: #f5f5f5; /* 白色背景 */
  border-radius: 10px;     /* 圆角 */
  padding: 20px; /* 内边距 */
  position: relative;  /* 使用相对定位 */
  top: -35px; /* 向上移动 10px */
  margin: 10px; /* 外边距 */
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.activity-remaining-time {
  font-size: 16px;           /* 增大字体，突出显示 */
  color: #FF4C4C;            /* 红色，代表紧迫感 */
  font-weight: bold;         /* 加粗字体 */
  margin: 10px 0;            /* 上下外边距，给内容更多空间 */
  padding: 8px 12px;         /* 增加内边距，避免内容粘边 */
  background-color: #fff; /* 背景色，浅红色让文字突出 */
  text-align: center;        /* 居中文本 */
}

/* 导航部分 */
.navigation-section {
  display: flex;
  justify-content: space-around;
  margin: 20rpx 0;
  width: 90%;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
}

.nav-item {
  text-align: center;
}

.nav-icon {
  width: 60rpx;
  height: 60rpx;
}

/* 活动部分 */
.activity-section {
  width: 90%;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-top: 20rpx;
}

.activity-title {
  font-size: 30rpx;
  font-weight: bold;
}

.activity-items {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.activity-item {
  text-align: center;
}

.activity-icon {
  width: 50rpx;
  height: 50rpx;
}

/* 按钮和状态 */
.token-button {
  margin-top: 20rpx;
  padding: 10rpx 20rpx;
  background-color: #1cbbb4;
  color: #fff;
  border-radius: 5rpx;
}

.token-status {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #333;
}


/* 等级文本 */
.level-text {
  font-size: 24rpx;
  font-weight: bold;
  margin-left: 5rpx;
  color: #0072ff; /* 字体颜色设置为蓝色 */
  text-shadow: 0 2rpx 4rpx rgba(0, 114, 255, 0.2); /* 蓝色文字阴影，增加立体感 */
  animation: float 2s infinite alternate; /* 保留浮动动画 */
}

/* 小牌子浮动动画 */
@keyframes float {
  from {
    transform: translateY(0);
  }
  to {
    transform: translateY(-5rpx);
  }
}
/* 经验条容器 */
.exp-bar-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 20rpx;
}

/* 经验值文本 */
.exp-text {
  font-size: 16rpx;
  font-weight: bold;
  color: #555;
  margin-bottom: 5rpx;
  text-align: right; /* 改为右对齐 */
  align-self: flex-end; /* 对齐到容器右侧 */
}

/* 经验进度条 */
.exp-bar {
  width: 125%;
  height: 6rpx;
  background: #000; /* 黑色背景，表示未获得经验 */
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 已获得经验部分 */
.exp-progress {
  height: 100%;
  background: linear-gradient(to right, #4f9eff, #00c6ff); /* 蓝色渐变 */
  width: 0%; /* 初始状态 */
  transition: width 0.5s ease-in-out;
  border-radius: 10rpx; /* 与父容器一致 */
  z-index: 200;
}
/* 容器 - 等级和经验值 */
.level-exp-container {
  display: flex;
  justify-content: space-between; /* 水平两端对齐 */
  align-items: center; /* 垂直居中 */
  
}