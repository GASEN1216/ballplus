page {
  background-color: #f5f5f5;
}
/* 全局容器 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: env(safe-area-inset-top);
}

/* 顶部固定栏 */
.header {
  width: 100%;
  height: 100rpx;
  background-color: #ffffff;
  border-bottom: 1px solid #ddd;
  display: flex;
  align-items: center;
  padding: 10rpx 40rpx;
  position: sticky;
  top: 0;
  z-index: 1000;
}

/* 用户信息 */
.user-info {
  display: flex;
  gap: 20rpx; /* 设置子元素之间的间距为 20rpx */
  align-items: center;
}

/* 用户头像 */
.avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-left: 30rpx; /* 头像向右移动 */
}

/* 用户文本信息（昵称和个人信息） */
.user-text {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.nickname {
  font-size: 28rpx;
  color: #333;
}

.settings-btn {
  margin-left: auto;
  padding-right: 20rpx; /* 右侧留白 */
}

.settings-icon {
  width: 80rpx;
  height: 80rpx;
}

/* 活动剩余时间的小牌子 */
.activity-banner {
  width: 100%; /* 让它占满整个屏幕 */
  background-color: #fff; /* 白色背景 */
  border-radius: 10rpx; /* 适当缩小圆角 */
  padding: 4rpx 0; /* 仅在上下增加小内边距 */
  text-align: center; /* 文字居中 */
  font-size: 16rpx; /* 字体大小 */
  font-weight: bold;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1); /* 轻微阴影，让它像浮起来 */
  margin: 0 auto; /* 水平居中 */
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 0rpx; /* 确保高度足够但不太高 */
  line-height: 0rpx; /* 让文本垂直居中 */
  position: relative;
  margin-top: 5px;
}

/* 活动列表样式 */
.activity-list {
  width: 100%;
  margin-top: 5px;
}

.activity-card {
  display: flex;
  position: relative;
  gap: 10px;
  padding: 10px;
  margin-bottom: 15px;
  border: 1px solid #ddd;
  border-radius: 10px;
  background-color: #fff;
}
.activity-distance {
  position: absolute;
  top: 10px;
  right: 10px;
  font-size: 14px;
  color: #666;
}
/* 头像样式 */
.activity-avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  border: 1px solid #ccc;
  object-fit: cover;
}

/* 活动信息 */
.activity-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 5px;
}

.activity-name {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.activity-meta {
  font-size: 14px;
  color: #666;
}

.activity-remarks {
  display: -webkit-box;        /* 创建一个伸缩容器 */
  -webkit-box-orient: vertical; /* 设置伸缩方向为纵向 */
  overflow: hidden;            /* 隐藏溢出部分 */
  text-overflow: ellipsis;     /* 超出部分显示省略号 */
  -webkit-line-clamp: 2;           /* 限制最多显示两行 */
  white-space: normal;         /* 允许文本换行 */
  line-height: 1.5;            /* 设置行高（可根据需要调整） */
  max-height: 3.3em;           /* 设置最大高度（可根据需要调整） */
  font-size: 14px;
  color: #888;
  margin-top: 5px;
}

.no-activity {
  text-align: center;
  color: #999;
  margin-top: 20rpx;
  margin-bottom: 25rpx;
  font-size: 16px;
}

/* 包裹所有内容的白板样式 */
.whiteboard {
  background-color: #f5f5f5; /* 白色背景 */
  border-radius: 10px;     /* 圆角 */
  padding: 20px; /* 内边距 */
  position: relative;  /* 使用相对定位 */
  top: -35px; /* 向上移动 10px */
  margin: 10px; /* 外边距 */
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.activity-remaining-time {
  font-size: 16px;           /* 增大字体，突出显示 */
  color: #FF4C4C;            /* 红色，代表紧迫感 */
  font-weight: bold;         /* 加粗字体 */
  margin: 10px 0;            /* 上下外边距，给内容更多空间 */
  padding: 8px 12px;         /* 增加内边距，避免内容粘边 */
  background-color: #fff; /* 背景色，浅红色让文字突出 */
  text-align: center;        /* 居中文本 */
}

.activity-remaining-time2 {
  font-size: 16px;           /* 比活动时间大2px，保持视觉层级 */
  color: #5A7D9C;            /* 改为青天色值，取自"青天无片云"意象 */
  font-weight: 600;          /* 中等加粗，避免过度强硬 */
  margin: 12px 0;            /* 扩大留白，模拟中国画题诗空间感 */
  padding: 10px 16px;        
  background: linear-gradient(
    to right, 
    #F0F6FF 20%,            /* 左浅蓝模拟天际渐变 */
    #FFFFFF 80%              /* 右留白呼应"无片云" */
  );
  text-align: center;
  border-radius: 4px;        /* 圆角暗合古籍装帧特征 */
  box-shadow: 0 2px 8px rgba(88,129,164,0.1); /* 青天投影效果 */
  font-family: '霞鹜文楷', sans-serif; /* 推荐开源书法字体 */
}

/* 在原有样式基础上新增 */
.activity-card.empty-card {
  background: #f8f9fa; /* 素绢色背景 */
  min-height: 180px; /* 保持与正常卡片等高 */
  width: 100%;
}

.poetic-state {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 16px;
  color: #5a7d9c;
  text-align: center;
  white-space: nowrap; /* 禁止换行 */
  font-family: 'LXGW WenKai', sans-serif;
  z-index: 2;
}

/* 导航部分 */
.navigation-section {
  display: flex;
  justify-content: space-around;
  margin: 0rpx 0;
  width: 100%;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-top: -5px;
}

.nav-item {
  text-align: center;
}

.nav-icon {
  width: 60rpx;
  height: 60rpx;
}

/* 活动部分 */
.activity-section {
  width: 95%;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-top: 20rpx;
}

.activity-title {
  font-size: 30rpx;
  font-weight: bold;
}

.activity-items {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.activity-item {
  text-align: center;
}

.activity-icon {
  width: 50rpx;
  height: 50rpx;
}

/* 按钮和状态 */
.token-button {
  margin-top: 20rpx;
  padding: 10rpx 20rpx;
  background-color: #1cbbb4;
  color: #fff;
  border-radius: 5rpx;
}

.token-status {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #333;
}


/* 等级文本 */
.level-text {
  font-size: 24rpx;
  font-weight: bold;
  margin-left: 5rpx;
  color: #0072ff; /* 字体颜色设置为蓝色 */
  text-shadow: 0 2rpx 4rpx rgba(0, 114, 255, 0.2); /* 蓝色文字阴影，增加立体感 */
  animation: float 2s infinite alternate; /* 保留浮动动画 */
}

/* 小牌子浮动动画 */
@keyframes float {
  from {
    transform: translateY(0);
  }
  to {
    transform: translateY(-5rpx);
  }
}
/* 经验条容器 */
.exp-bar-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 20rpx;
}

/* 经验值文本 */
.exp-text {
  font-size: 16rpx;
  font-weight: bold;
  color: #555;
  margin-bottom: 5rpx;
  text-align: right; /* 改为右对齐 */
  align-self: flex-end; /* 对齐到容器右侧 */
}

/* 经验进度条 */
.exp-bar {
  width: 125%;
  height: 6rpx;
  background: #000; /* 黑色背景，表示未获得经验 */
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 已获得经验部分 */
.exp-progress {
  height: 100%;
  background: linear-gradient(to right, #4f9eff, #00c6ff); /* 蓝色渐变 */
  width: 0%; /* 初始状态 */
  transition: width 0.5s ease-in-out;
  border-radius: 10rpx; /* 与父容器一致 */
  z-index: 200;
}
/* 容器 - 等级和经验值 */
.level-exp-container {
  display: flex;
  justify-content: space-between; /* 水平两端对齐 */
  align-items: center; /* 垂直居中 */
  
}