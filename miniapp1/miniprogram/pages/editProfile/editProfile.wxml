<!-- editInfo.wxml -->
<view class="edit-info-container">
  <!-- 表单输入部分 -->
  <form>
    <view class="form-item">
      <text>昵称</text>
      <input type="text" placeholder="请输入昵称" value="{{nickname}}" bindinput="handleInputChange" data-field="nickname"/>
    </view>

    <view class="form-item">
      <text>头像</text>
      <button bindtap="chooseAvatar">选择头像</button>
    </view>

    <view class="form-item">
      <text>性别</text>
      <radio-group bindchange="handleGenderChange">
        <label><radio value="男" checked="{{gender === '男'}}"/> 男</label>
        <label><radio value="女" checked="{{gender === '女'}}"/> 女</label>
      </radio-group>
    </view>

    <view class="form-item">
      <text>生日</text>
      <input type="date" value="{{birthday}}" bindinput="handleInputChange" data-field="birthday"/>
    </view>

    <view class="form-item">
      <text>所在城市</text>
      <input type="text" placeholder="请输入所在城市" value="{{city}}" bindinput="handleInputChange" data-field="city"/>
    </view>

    <view class="form-item">
      <text>运动偏好</text>
      <checkbox-group bindchange="handleSportsChange">
        <label><checkbox value="篮球" checked="{{sports.includes('篮球')}}" /> 篮球</label>
        <label><checkbox value="足球" checked="{{sports.includes('足球')}}" /> 足球</label>
        <label><checkbox value="羽毛球" checked="{{sports.includes('羽毛球')}}" /> 羽毛球</label>
      </checkbox-group>
    </view>

    <view class="form-item">
      <text>个人简介</text>
      <textarea placeholder="请输入个人简介" value="{{bio}}" bindinput="handleInputChange" data-field="bio"></textarea>
    </view>

    <!-- 保存按钮 -->
    <button class="save-button" bindtap="saveInfo">保存</button>
  </form>
</view>