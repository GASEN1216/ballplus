.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f8f8f8;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.form-group {
  width: 100%;
  margin-bottom: 20rpx;
}

.label {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border-radius: 10rpx;
  background-color: #fff;
  border: 1px solid #ddd;
}

.save-button {
  width: 80%;
  height: 80rpx;
  margin-top: 30rpx;
  border-radius: 10rpx;
  background-color: #4CAF50;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}
