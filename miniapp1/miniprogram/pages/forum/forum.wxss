/* 整体容器 */
.container {
  background-color: #F8F8F8;
  padding-bottom: 20rpx;
}

/* 固定头部：搜索栏与加号按钮 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}
.search-input {
  flex: 1;
  height: 50rpx;
  padding: 0 15rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
}
.add-button {
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx;
}

/* 帖子列表区 */
.post-list {
  width: 97%;
  margin-top: -90rpx; /* 顶部预留空间 */
  padding: 0 20rpx;
}

/* 帖子项 */
.post-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.05);
}

/* 帖子头部 */
.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}
.avatar {
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
}
.header-info {
  margin-left: 15rpx;
  flex: 1;
  display: flex;
  align-items: center; /* 子元素垂直居中 */
}
.post-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
/* 等级文本 - 小牌子效果 */
.level-text {
  display: inline-block;
  font-size: 14rpx;
  line-height: 14rpx;  /* 行高设置为字体大小 */
  font-weight: bold;
  padding: 0rpx 6rpx;            
  margin-left: 5rpx;
  color: #000000;                
  background-color: #ffffff;     
  border: 1rpx solid #000000;      
  transform: translateX(10rpx);
}

/* 帖子主体 */
.post-body {
  margin-bottom: 15rpx;
}
.post-name {
  font-size: 22rpx;
  color: #666;
}
.post-content {
  font-size: 28rpx;
  color: #555;
  display: -webkit-box; /* 关键属性 */
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; /* 限制两行 */
  overflow: hidden;
  text-overflow: ellipsis;
  /* 以下保证换行能力 */
  word-wrap: break-word;
  white-space: pre-wrap; /* 保留\n换行 */
  line-height: 1.4em; /* 行高需明确 */
  max-height: 2.8em; /* 行高 × 行数 */
}

/* 图片容器：固定尺寸，溢出部分隐藏 */
.post-image-container {
  width: 33%;
  height: 250rpx;
  overflow: hidden;
  border-radius: 10rpx;
  margin-bottom: 15rpx;
}

.post-image {
  width: 100%;
  height: 100%;
  object-position: center;
}

/* 帖子操作区 */
.post-actions {
  display: flex;
  justify-content: flex-end;
  font-size: 28rpx;
  color: #888;
}
.action-item {
  margin-left: 15rpx;
}

/* 向上箭头 */
.up-arrow {
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  background-color: rgba(0, 0, 0, 0.6);
  padding: 10rpx 15rpx;
  border-radius: 50%;
  color: #fff;
  font-size: 32rpx;
  z-index: 110;
}

/* 弹窗遮罩层 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 200;
}
.modal-content {
  width: 90%;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
}
.modal-content input{
  width: 98%;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 10rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.modal-content textarea {
  width: 98%;
  height: 300rpx; /* 固定高度 */
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 10rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  overflow-y: auto; /* 超出内容垂直滚动 */
  white-space: pre-wrap; /* 保留换行 */
}
.upload-btn, .submit-btn {
  width: 100%;
  padding: 15rpx;
  border: none;
  border-radius: 8rpx;
  font-size: 30rpx;
  margin-bottom: 15rpx;
}
.upload-btn {
  background-color: #eee;
  color: #333;
}
.submit-btn {
  background-color: #007aff;
  color: #fff;
}

/* 新增上传图片预览样式 */
.upload-preview {
  width: 100%;
  height: 500rpx;
  object-fit: contain;
  margin-top: 10rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
}
