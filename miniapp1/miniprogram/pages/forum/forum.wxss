.forum-container {
  padding: 10px;
}

.search-bar {
  position: fixed;
  top: 0;
  width: 100%;
  display: flex;
  align-items: center;
  padding: 10px;
  background-color: #fff;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  z-index: 10;
}

.search-input {
  flex: 1;
  padding: 5px 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
}

.add-button {
  width: 40px;
  height: 40px;
  margin-left: 10px;
}

.up-arrow {
  position: fixed;
  top: 10px;
  right: 10px;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 10px;
  border-radius: 50%;
  color: #fff;
  font-size: 14px;
  text-align: center;
  z-index: 10;
}

.post-list {
  margin-top: 60px;
}

.post-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20px;
}

.post-avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-right: 10px;
}

.post-info {
  flex: 1;
}

.post-name {
  font-weight: bold;
  margin-bottom: 5px;
}

.post-time {
  font-size: 12px;
  color: #999;
  margin-bottom: 10px;
}

.post-title {
  font-weight: 600;
  margin-bottom: 12px;
}

.post-content {
  margin-bottom: 10px;
}

.post-image {
  width: 100%;
  max-height: 200px;
  object-fit: cover;
}

.post-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 20;
}

.modal-content {
  width: 90%;
  background: #fff;
  padding: 20px;
  border-radius: 5px;
  display: flex;
  flex-direction: column;
}

.modal-content input,
.modal-content textarea {
  margin-bottom: 10px;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
}

.submit-button {
  background-color: #007aff;
  color: #fff;
  padding: 10px;
  border-radius: 5px;
  text-align: center;
}

.post-actions {
  display: flex;
  justify-content: flex-end;
  padding: 10px;
  gap: 15px;
}

.action-item {
  display: flex;
  align-items: center;
  color: #888;
  font-size: 14px;
  cursor: pointer;
}
.disabled {
  pointer-events: none; /* 禁止鼠标交互 */
  color: #999; /* 改变颜色，显示为不可点击 */
  cursor: default;
}
