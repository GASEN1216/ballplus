.tabs-container {
  background-color: #ffffff;
  border-bottom: 1px solid #e0e0e0;
}

.tabs {
  display: flex;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 10px 0;
  font-size: 16px;
  color: #666;
}

.tab.active {
  font-weight: bold;
  color: #333;
  border-bottom: 2px solid #007aff;
}

.divider {
  height: 10px;
  background-color: #f5f5f5;
}

.requests-container {
  background-color: #ffffff;
  padding: 10px;
}

.request-item {
  display: flex;
  align-items: center;
  padding: 10px 0;
  border-bottom: 1px solid #e0e0e0;
}

.request-avatar {
  flex-shrink: 0;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 10px;
}

.request-avatar__image {
  width: 100%;
  height: 100%;
}

.request-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.request-info__name {
  font-size: 16px;
  color: #333;
}

.request-info__action {
  margin-top: 5px;
}

.accept-btn {
  background-color: #007aff;
  color: #ffffff;
  padding: 5px 10px;
  border-radius: 5px;
  font-size: 14px;
}

.no-request {
  text-align: center;
  color: #888;
  margin-top: 20px;
  font-size: 14px;
}
