/* pages/friends/friends.wxss */
.container {
  padding: 20px;
  background-color: #f7f7f7;
  height: 100%;
}

.text {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
  color: #333;
}

.input {
  width: 100%;
  padding: 10px;
  margin-bottom: 20px;
  border: 1px solid #ccc;
  border-radius: 5px;
  font-size: 16px;
}

.button {
  background-color: #28a745;
  color: white;
  padding: 10px;
  border: none;
  border-radius: 5px;
  font-size: 16px;
  text-align: center;
}

.button:hover {
  background-color: #218838;
}

.friend-list {
  margin-top: 20px;
}

.friend-item {
  padding: 10px;
  border-bottom: 1px solid #ccc;
  color: #333;
}
