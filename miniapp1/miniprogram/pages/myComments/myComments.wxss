.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f6f6f6;
}

.tab-bar {
  display: flex;
  border-bottom: 1rpx solid #eaeaea;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab {
  position: relative;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  text-align: center;
  flex: 1;
}

.tab.active {
  color: #4ecdc4;
  font-weight: 500;
}

.tab.active:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 4rpx;
  background-color: #4ecdc4;
  border-radius: 2rpx;
}

.comment-list {
  flex: 1;
  height: calc(100vh - 68rpx); /* tab栏高度 */
}

.comment-item {
  display: flex;
  padding: 24rpx;
  border-bottom: 1rpx solid #eee;
  background-color: #fff;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.user-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.comment-content {
  flex: 1;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.username {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-right: 10rpx;
}

.user-badge {
  background-color: #ff6b81;
  color: #fff;
  font-size: 22rpx;
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
}

.comment-text {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.reply-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  word-break: break-all;
  margin-bottom: 16rpx;
}

.comment-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.post-time {
  font-size: 24rpx;
  color: #999;
}

.action-btns {
  display: flex;
}

.btn {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.btn text {
  font-size: 24rpx;
  color: #666;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 70vh;
  padding: 0 60rpx;
}

.empty-icon {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 24rpx;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4ecdc4;
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.load-all {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 24rpx;
  position: absolute;
  bottom: 0;
  width: 100%;
} 