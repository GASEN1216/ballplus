<view class="container">
  <form bindsubmit="formSubmit">
    <view class="form-group">
      <label>时间:</label>
      <input type="text" name="time" value="{{time}}" placeholder="请输入活动时间" />
    </view>
    <view class="form-group">
      <label>发起人:</label>
      <input type="text" name="host" value="{{host}}" placeholder="请输入发起人" />
    </view>
    <view class="form-group">
      <label>当前人数:</label>
      <input type="number" name="currentParticipants" value="{{currentParticipants}}" placeholder="请输入当前人数" />
    </view>
    <view class="form-group">
      <label>最大人数:</label>
      <input type="number" name="maxParticipants" value="{{maxParticipants}}" placeholder="请输入最大人数" />
    </view>
    <view class="form-group">
      <label>内容:</label>
      <textarea name="content" value="{{content}}" placeholder="请输入活动内容"></textarea>
    </view>
    <button formType="submit">提交</button>
  </form>
</view>