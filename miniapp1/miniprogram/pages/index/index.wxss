/* 通用样式 */
.main-container {
  padding: 10px;
}

/* 轮播图样式 */
.carousel-container {
  width: 100%;
  height: 200px;
  margin-bottom: 10px;
}

.carousel-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 发起活动按钮 */
.create-activity-section {
  text-align: center;
  margin: 15px 0;
}

.create-activity-button {
  background-color: #ff9800;
  color: white;
  border-radius: 5px;
  padding: 10px 20px;
  font-size: 16px;
  border: none;
}

/* 活动列表样式 */
.activity-list {
  margin-top: 10px;
}

.activity-card {
  display: flex;
  gap: 10px;
  padding: 10px;
  margin-bottom: 15px;
  border: 1px solid #ddd;
  border-radius: 10px;
  background-color: #fff;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

/* 头像样式 */
.activity-avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  border: 1px solid #ccc;
  object-fit: cover;
}

/* 活动信息 */
.activity-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 5px;
}

.activity-name {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.activity-meta {
  font-size: 14px;
  color: #666;
}

.activity-remarks {
  font-size: 14px;
  color: #888;
  margin-top: 5px;
}

/* 底部导航栏 */
.tabbar {
  display: flex;
  justify-content: space-around;
  background-color: #ffffff;
  border-top: 1px solid #e0e0e0;
  padding: 10px 0;
  position: fixed;
  bottom: 0;
  width: 100%;
}

.tabbar button {
  font-size: 14px;
  color: #666;
  background: none;
  border: none;
}
.no-activity {
  text-align: center;
  color: #999;
  margin-top: 20px;
  font-size: 16px;
}
