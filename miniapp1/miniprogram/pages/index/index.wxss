/* 轮播图样式 */
.carousel-container {
  width: 100%;
  height: 200px;
  margin-bottom: 10px;
  overflow: hidden;
}

.carousel {
  width: 100%;
  height: 100%;
}

.carousel-image {
  width: 100%;
  height: 200px;
  object-fit: cover;
}

/* 匹配模块样式 */
.match-section {
  text-align: center;
  margin: 10px 0;
}

.match-button {
  background-color: #4caf50;
  color: white;
  border-radius: 5px;
  padding: 10px 20px;
  margin-bottom: 10px;
}

.tags {
  display: flex;
  justify-content: center;
  gap: 10px;
}

.tags button {
  background-color: #f1f1f1;
  border-radius: 5px;
  padding: 5px 10px;
}

/* 活动列表样式 */
.activity-list {
  height: 400px;
  overflow-y: scroll;
}

.activity-card {
  display: flex;
  gap: 10px;
  margin-bottom: 10px;
  border-radius: 8px;
  overflow: hidden;
  border: 1px solid #ddd;
  padding: 10px;
}

.activity-cover {
  width: 100px;
  height: 75px;
  border-radius: 8px;
}

.quick-access {
  display: flex;
  justify-content: space-around;
  margin: 20px 0;
}

.quick-access button {
  background-color: #f9f9f9;
  border-radius: 5px;
  padding: 10px;
}

/* 底部导航栏 */
.tabbar {
  display: flex;
  justify-content: space-around;
  background-color: #ffffff;
  border-top: 1px solid #e0e0e0;
  padding: 10px 0;
}
.search-section {
  display: flex;
  gap: 10px;
  margin: 10px 0;
}
.search-section input {
  flex: 1;
  border: 1px solid #ddd;
  border-radius: 5px;
  padding: 5px;
}
.search-section button {
  background-color: #4caf50;
  color: white;
  border-radius: 5px;
}
.sort-section {
  display: flex;
  gap: 10px;
  margin: 10px 0;
}
.sort-section button {
  background-color: #f1f1f1;
  border-radius: 5px;
  padding: 5px;
}
.activity-info {
  flex: 1;
}

.activity-button {
  background-color: #4caf50;
  color: white;
  border-radius: 5px;
}