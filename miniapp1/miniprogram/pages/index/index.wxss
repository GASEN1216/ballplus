/* 通用样式 */
.main-container {
  padding: 10px;
}

/* 轮播图样式 */
.carousel-container {
  width: 100%;
  height: 150px;
  margin-bottom: 10px;
}

.carousel-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 发起活动按钮 */
.create-activity-section {
  text-align: center;
  margin: 15px 0;
}

.create-activity-button {
  background-color: #ff9800;
  color: white;
  border-radius: 5px;
  padding: 10px 20px;
  font-size: 16px;
  border: none;
}

/* 活动列表样式 */
.activity-list {
  margin-top: 10px;
}

.activity-card {
  display: flex;
  position: relative;
  gap: 10px;
  padding: 10px;
  margin-bottom: 15px;
  border: 1px solid #ddd;
  border-radius: 10px;
  background-color: #fff;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}
.activity-distance {
  position: absolute;
  top: 10px;
  right: 10px;
  font-size: 14px;
  color: #666;
}
/* 头像样式 */
.activity-avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  border: 1px solid #ccc;
  object-fit: cover;
}

/* 活动信息 */
.activity-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 5px;
}

.activity-name {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.activity-meta {
  font-size: 14px;
  color: #666;
}

.activity-remarks {
  display: -webkit-box;        /* 创建一个伸缩容器 */
  -webkit-box-orient: vertical; /* 设置伸缩方向为纵向 */
  overflow: hidden;            /* 隐藏溢出部分 */
  text-overflow: ellipsis;     /* 超出部分显示省略号 */
  -webkit-line-clamp: 2;           /* 限制最多显示两行 */
  white-space: normal;         /* 允许文本换行 */
  line-height: 1.5;            /* 设置行高（可根据需要调整） */
  max-height: 3.3em;           /* 设置最大高度（可根据需要调整） */
  font-size: 14px;
  color: #888;
  margin-top: 5px;
}

/* 底部导航栏 */
.tabbar {
  display: flex;
  justify-content: space-around;
  background-color: #ffffff;
  border-top: 1px solid #e0e0e0;
  padding: 10px 0;
  position: fixed;
  bottom: 0;
  width: 100%;
}

.tabbar button {
  font-size: 14px;
  color: #666;
  background: none;
  border: none;
}
.no-activity {
  text-align: center;
  color: #999;
  margin-top: 20px;
  font-size: 16px;
}
/* 外层容器 */
.filter-container {
  background-color: #ffffff;
  padding: 10px;
  border-radius: 10px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  border: 1px solid #e0e0e0; /* 添加轻微边框，使容器更有层次感 */
}

/* 日期滚动区域 */
.date-scroll {
  display: flex;
  justify-content: space-between; /* 通过间距填满屏幕 */
  padding-bottom: 10px;
  border-bottom: 1px solid #f0f0f0;
}

/* 日期项 */
.date-item {
  display: inline-block;
  text-align: center;
  width: 20%;
}

.date-number {
  font-size: 16px;
  color: #333;
  width: 40px; /* 宽度固定 */
  height: 40px; /* 高度固定，和宽度一致 */
  line-height: 40px; /* 让文字垂直居中 */
  border-radius: 50%; /* 圆形 */
  margin: 0 auto; /* 居中 */
  text-align: center;
}

.date-number.selected {
  font-size: 17px;
  background-color: rgb(211, 183, 183); /* 深灰色背景 */
  color: #fff; /* 文字为白色 */
  border: none; /* 移除边框 */
}

.date-week {
  font-size: 12px;
  color: #666; /* 中灰色字体 */
  margin-top: 5px;
}

.date-week.selected {
  font-size: 13px;
  color: #333; /* 深灰色字体 */
}

/* 筛选和模式切换 */
.sort-options {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10px;
}

.sort-dropdown {
  position: relative; /* 定位父容器，为下拉菜单提供定位基础 */
  z-index: 10; /* 高于 GIF */
  display: flex;
  align-items: center;
  font-size: 14px;
  color: #666;
  cursor: pointer;
}

.dropdown-icon {
  margin-left: 5px;
}

.order-toggle,
.map-mode {
  display: flex;
  align-items: center;
  font-size: 14px;
  color: #666;
}

.map-icon {
  width: 16px;
  height: 16px;
  margin-left: 5px;
}

.animation-container {
  position: fixed;
  top: 35%;
  left: 5%;
  width: 90%;
  height: 150rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 9999;
}

.player-one, .player-two {
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  top: 25rpx; /* 调整这个值，使人物下移 */
}

.player-one {
  position: absolute;
  left: 0;
}

.player-two {
  position: absolute;
  right: 0;
}

.basketball {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 10%;
  top: 45%;
  animation: passBall 1s linear forwards; /* 1秒匀速动画 */
}

@keyframes passBall {
  0% {
    transform: translateX(0) translateY(0); /* 从传球者手中出发 */
  }
  25% {
    transform: translateX(15vw) translateY(-20rpx); /* 稍微上升 */
  }
  50% {
    transform: translateX(30vw) translateY(-50rpx); /* 最高点 */
  }
  75% {
    transform: translateX(45vw) translateY(-20rpx); /* 开始下降 */
  }
  100% {
    transform: translateX(60vw) translateY(0); /* 传到接球者手中 */
  }
}
