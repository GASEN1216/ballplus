<view class="page-container">
  <!-- 帖子列表 -->
  <scroll-view 
    class="post-list" 
    scroll-y 
    bindscrolltolower="loadMorePosts" 
    enable-back-to-top>
    
    <block wx:if="{{posts.length > 0}}">
      <view class="post-item" wx:for="{{posts}}" wx:key="id" bindtap="goToPostDetail" data-id="{{item.id}}">
        <view class="post-main">
          <view class="post-title">{{item.title || '无标题'}}</view>
          <view class="post-content">{{item.content || '无内容'}}</view>
          
          <view class="post-image-container" wx:if="{{item.picture}}">
            <image class="post-image" src="{{item.picture}}" mode="aspectFill" lazy-load></image>
          </view>
        </view>
        
        <view class="post-footer">
          <view class="post-time">{{item.createTime}}</view>
          <view class="post-stats">
            <view class="stat-item">
              <image src="/icon/like.png" class="icon"></image>
              <text>{{item.likes || 0}}</text>
            </view>
            <view class="stat-item">
              <image src="/icon/comment.png" class="icon"></image>
              <text>{{item.comments || 0}}</text>
            </view>
          </view>
        </view>
      </view>
    </block>
    
    <!-- 空状态 -->
    <view class="empty-state" wx:if="{{posts.length === 0 && !loading}}">
      <image src="/icon/empty.png" class="empty-icon"></image>
      <text class="empty-text">您还没有发表过帖子</text>
      <button class="create-post-btn" bindtap="goToCreatePost">去发布一条</button>
    </view>
    
    <!-- 加载状态 -->
    <view class="loading-state" wx:if="{{loading}}">
      <view class="loading-spinner"></view>
      <text>加载中...</text>
    </view>
    
    <!-- 加载完成提示 -->
    <view class="load-all" wx:if="{{loadAll && posts.length > 0}}">
      <text>已经到底啦</text>
    </view>
  </scroll-view>

  <!-- 固定的发帖按钮 -->
  <view class="float-btn" bindtap="goToCreatePost">
    <image src="/icon/add.png" class="float-btn-icon"></image>
  </view>
</view> 