page {
  background-color: #ffffff;
}
/* 整体容器 */
.container {
  padding: 32rpx 24rpx;
  font-family: Arial, sans-serif;
  text-align: left; /* 全局左对齐 */
}

/* 帖子头部 */
.post-header {
  width: 100%;
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}
.post-author-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}
.post-meta {
  flex: 1;
  text-align: left;  /* 确保元信息左对齐 */
}
.post-title {
  width: 100%;
  font-size: 42rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  text-align: left;
}
.post-author-info {
  font-size: 24rpx;
  color: rgb(0, 0, 0);
  display: flex;
  align-items: center;
  gap: 16rpx;
  text-align: left;  /* 作者信息左对齐 */
}
.post-time {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
}
.post-author {
  font-weight: bold;
  font-size: 28rpx;
  color: rgb(0, 0, 0);
}
/* 等级文本 - 小牌子效果 */
.level-text {
  display: inline-flex;
  align-items: center;
  font-size: 14rpx;
  line-height: 14rpx;  /* 行高设置为字体大小 */
  font-weight: bold;
  padding: 0rpx 6rpx;             /* 内边距，营造牌子效果 */
  color: #000000;                 /* 字体颜色为蓝色 */
  background-color: #ffffff;      /* 淡蓝色背景 */
  border: 1rpx solid #000000;      /* 蓝色边框 */
}

/* 帖子内容 */
.post-content {
  width: 98%;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}
.content-text {
  display: block;
  font-size: 30rpx;
  color: #555;
  line-height: 1.6;
  margin-bottom: 16rpx;
}
.post-image {
  max-height: 400rpx;
  object-position: center; /* 图片居中显示 */
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

/* 分割线 */
.divider {
  width: 100%;
  height: 1rpx;
  background-color: #ddd;
  margin: 24rpx 0;
}

/* 评论区域 */
.comments-container {
  width: 100%;
  padding: 20rpx;
  background-color: #fff;
  box-sizing: border-box;
  padding-bottom: 150rpx;
}
.comment-block {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  transition: background-color 0.3s ease;
}
.comment-block.highlighted {
  animation: highlightFade 1s ease;
}
@keyframes highlightFade {
  0% {
    background-color: rgba(0, 0, 0, 0.1);
  }
  100% {
    background-color: #fff;
  }
}
.comment-item {
  display: flex;
  padding: 16rpx;
}
.comment-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}
.comment-main {
  flex: 1;
}
.comment-info {
  font-size: 24rpx;
  color: rgb(0, 0, 0);
  display: flex;
  align-items: center;
  gap: 16rpx;
  text-align: left;  /* 作者信息左对齐 */
}
.comment-name {
  font-weight: bold;
  font-size: 28rpx;
  color: rgb(0, 0, 0);
}
.comment-actions {
  display: flex;
  gap: 12rpx;
  align-items: center;
  margin-top: 8rpx;
  margin-left: auto;
}
.icon-button {
  width: 36rpx;
  height: 36rpx;
}
.likes-count {
  font-size: 24rpx;
  color: #007aff;
}
/* 子评论 */
.sub-comments {
  margin-left: 60rpx;
  margin-top: 20rpx;
  background-color: #f7f7f7;
  border-radius: 8rpx;
  padding: 12rpx 0;
}
.show-more-sub-comments {
  font-size: 26rpx;
  color: #576b95;
  padding: 12rpx 20rpx;
  text-align: left;
}
.sub-comment-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 12rpx 20rpx;
  margin-bottom: 8rpx;
}
.sub-comment-content {
  flex: 1;
  margin-right: 16rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.sub-comment-name {
  font-size: 28rpx;
  color: #576b95;
  font-weight: 500;
}
.sub-comment-text {
  font-size: 28rpx;
  color: #333;
}
.sub-comment-actions {
  display: flex;
  align-items: center;
  min-width: 80rpx;
}
.icon-button-small {
  width: 32rpx;
  height: 32rpx;
  padding: 4rpx;
}
.likes-count-small {
  font-size: 24rpx;
  color: #999;
  margin-left: 4rpx;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 16rpx 32rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.bottom-normal {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.comment-input {
  flex: 1;
  height: 72rpx;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 32rpx;
  line-height: 72rpx;
  color: #999;
  font-size: 28rpx;
}

.bottom-actions {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.action-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx;
}

.icon-button {
  width: 48rpx;
  height: 48rpx;
}

.action-count {
  font-size: 26rpx;
  color: #999;
  min-width: 20rpx;
  text-align: center;
}

.bottom-reply {
  display: flex;
  align-items: flex-end;
  gap: 16rpx;
}

.reply-container {
  flex: 1;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 16rpx;
}

.reply-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
  display: block;
}

.reply-input {
  width: 100%;
  min-height: 36rpx;
  max-height: 300rpx;
  font-size: 28rpx;
  line-height: 1.5;
  padding: 0;
}

.submit-custom {
  width: 120rpx;
  height: 64rpx;
  background-color: #07c160;
  color: #fff;
  text-align: center;
  line-height: 64rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
}

.sort-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  margin-bottom: 10rpx;
}

.comment-count {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.sort-switch {
  text-align: right;
  padding: 10rpx 0;
}

.sort-text {
  font-size: 24rpx;
  color: #666;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  background-color: #f5f5f5;
}
