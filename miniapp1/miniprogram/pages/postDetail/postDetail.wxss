page {
  background-color: #ffffff;
}
/* 整体容器 */
.container {
  padding: 32rpx 24rpx;
  font-family: Arial, sans-serif;
  text-align: left; /* 全局左对齐 */
}

/* 帖子头部 */
.post-header {
  width: 100%;
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}
.post-author-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}
.post-meta {
  flex: 1;
  text-align: left;  /* 确保元信息左对齐 */
}
.post-title {
  width: 100%;
  font-size: 42rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  text-align: left;
}
.post-author-info {
  font-size: 24rpx;
  color: rgb(0, 0, 0);
  display: flex;
  align-items: center;
  gap: 16rpx;
  text-align: left;  /* 作者信息左对齐 */
}
.post-time {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
}
.post-author {
  font-weight: bold;
  font-size: 28rpx;
  color: rgb(0, 0, 0);
}
/* 等级文本 - 小牌子效果 */
.level-text {
  display: inline-flex;
  align-items: center;
  font-size: 14rpx;
  line-height: 14rpx;  /* 行高设置为字体大小 */
  font-weight: bold;
  padding: 0rpx 6rpx;             /* 内边距，营造牌子效果 */
  color: #000000;                 /* 字体颜色为蓝色 */
  background-color: #ffffff;      /* 淡蓝色背景 */
  border: 1rpx solid #000000;      /* 蓝色边框 */
}

/* 帖子内容 */
.post-content {
  width: 98%;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}
.content-text {
  display: block;
  font-size: 30rpx;
  color: #555;
  line-height: 1.6;
  margin-bottom: 16rpx;
}
.post-image {
  max-height: 400rpx;
  object-position: center; /* 图片居中显示 */
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

/* 分割线 */
.divider {
  width: 100%;
  height: 1rpx;
  background-color: #ddd;
  margin: 24rpx 0;
}

/* 评论区域 */
.comments-container {
  width: 100%;
  padding: 0 24rpx;
  box-sizing: border-box;
  padding-bottom: 150rpx;
}
.comment-block {
  width: 100%;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 16rpx;
  overflow: hidden;
}
.comment-item {
  display: flex;
  padding: 16rpx;
}
.comment-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}
.comment-main {
  flex: 1;
}
.comment-info {
  font-size: 24rpx;
  color: rgb(0, 0, 0);
  display: flex;
  align-items: center;
  gap: 16rpx;
  text-align: left;  /* 作者信息左对齐 */
}
.comment-name {
  font-weight: bold;
  font-size: 28rpx;
  color: rgb(0, 0, 0);
}
.comment-actions {
  display: flex;
  gap: 12rpx;
  align-items: center;
  margin-top: 8rpx;
  margin-left: auto;
}
.icon-button {
  width: 36rpx;
  height: 36rpx;
}
.likes-count {
  font-size: 24rpx;
  color: #007aff;
}
/* 子评论 */
.sub-comments {
  background-color: #ebebeb;
  padding: 12rpx;
  border-top: 1rpx solid #eee;
}
.sub-comment-item {
  display: flex;
  font-size: 24rpx;
  color: #555;
  margin-bottom: 8rpx;
}
.sub-comment-name {
  font-weight: bold;
  margin-right: 4rpx;
}
.show-more-sub-comments {
  font-size: 24rpx;
  color: #007aff;
  text-align: right;
  cursor: pointer;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 16rpx 24rpx;
  box-shadow: 0 -2rpx 6rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
}

/* 普通状态下 */
.bottom-normal {
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: space-between;
}
.comment-input {
  width: 100%;
  border: 1px solid #ccc;
  border-radius: 20px; /* 更圆润的圆角 */
  padding: 10px 15px;
  color: #999;
  background-color: #fff; /* 可选：设置背景色 */
}

.bottom-actions {
  display: flex;
  gap: 16rpx;
}
.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.action-number {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
}

/* 回复状态下 */
.bottom-reply {
  display: flex;
  width: 100%;
  align-items: flex-start;
  gap: 16rpx;
}
.reply-container {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.reply-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}
.reply-input {
  width: 100%;
  min-height: 50rpx;
  max-height: 150rpx;  /* 当内容较多时出现滚动条 */
  padding: 12rpx;
  font-size: 28rpx;
  border: 1rpx solid #ddd;
  border-radius: 30rpx;
  overflow-y: auto;
  resize: none;  /* 禁止用户手动调整 */
  box-sizing: border-box;
}

/* 自定义提交控件，仅占两个汉字宽度 */
.submit-custom {
  background-color: #007aff;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx;
  width: 70rpx;  /* 根据实际情况调整 */
  height: 72rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
