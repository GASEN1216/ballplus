/* 整体容器 */
.container {
  padding: 32rpx 24rpx;
  background-color: #f9f9f9;
  font-family: Arial, sans-serif;
}

/* 帖子头部 */
.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}
.post-author-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}
.post-meta {
  flex: 1;
}
.post-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}
.post-author-info {
  font-size: 24rpx;
  color: #666;
  display: flex;
  gap: 16rpx;
}

/* 帖子内容 */
.post-content {
  background-color: #fff;
  padding: 24rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
}
.content-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
  margin-bottom: 16rpx;
}
.post-image {
  width: 100%;
  max-height: 400rpx;
  object-fit: cover;
  border-radius: 8rpx;
}

/* 分割线 */
.divider {
  width: 100%;
  height: 1rpx;
  background-color: #ddd;
  margin: 24rpx 0;
}

/* 整个评论区域，使用内边距保证左右间距 */
.comments-container {
  width: 100%;
  padding: 0 24rpx;
  box-sizing: border-box;
}

/* 每个评论块：占满全屏宽度，带有背景、圆角、阴影和底部间隔 */
.comment-block {
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 16rpx;
  overflow: hidden;
}

/* 主评论区域，采用水平布局 */
.comment-item {
  display: flex;
  padding: 16rpx;
}

/* 用户头像 */
.comment-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

/* 评论主体 */
.comment-main {
  flex: 1;
}

/* 评论信息 */
.comment-info {
  margin-bottom: 8rpx;
}

.comment-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.comment-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 评论操作按钮 */
.comment-actions {
  display: flex;
  gap: 12rpx;
  align-items: center;
  margin-top: 8rpx;
}

.icon-button {
  width: 36rpx;
  height: 36rpx;
}

.likes-count {
  font-size: 24rpx;
  color: #007aff;
}

/* 子评论区域：使用浅背景色、内边距和分隔线效果 */
.sub-comments {
  background-color: #ebebeb;
  padding: 12rpx;
  border-top: 1rpx solid #eee;
}

.sub-comment-item {
  display: flex;
  font-size: 24rpx;
  color: #555;
  margin-bottom: 8rpx;
}

.sub-comment-name {
  font-weight: bold;
  margin-right: 4rpx;
}

.show-more-sub-comments {
  font-size: 24rpx;
  color: #007aff;
  text-align: right;
  cursor: pointer;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 16rpx 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 -2rpx 6rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
}
.comment-input {
  flex: 1;
  padding: 12rpx;
  font-size: 28rpx;
  border: 1rpx solid #ddd;
  border-radius: 30rpx;
  margin-right: 16rpx;
}
.bottom-actions {
  display: flex;
  gap: 16rpx;
}
.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.action-number {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
}

/* 整个回复弹窗容器，全屏覆盖 */
.reply-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 20;
}

/* 遮罩层 */
.popup-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 10;
}

/* 回复弹窗内容区域 */
.popup-content {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 15;
  /* 使用 flex 布局，使按钮固定在底部 */
  display: flex;
  flex-direction: column;
  transition: height 0.3s;
}

/* 拖拽把手 */
.handle {
  width: 40rpx;
  height: 4rpx;
  background-color: #ccc;
  border-radius: 2rpx;
  margin: 16rpx auto;
}

/* 回复内容区域：随容器高度扩展 */
.reply-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0 24rpx;
  overflow: hidden;
}

/* 回复标题 */
.reply-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

/* 回复输入框 */
.reply-input {
  flex: 1;
  width: 100%;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  resize: none; /* 禁止手动调整大小 */
}

/* 发送按钮始终在底部 */
.send-button {
  margin: 16rpx 24rpx;
  padding: 16rpx;
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
}
