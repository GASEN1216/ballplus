<view class="container" bindtap="closeReplyPopup">
  <image wx:if="{{post.image}}" class="post-image" src="{{post.image}}" catchtap="previewImage" data-url="{{post.image}}" mode="aspectFit" />
  <text class="post-title">{{post.title}}</text>
  <!-- 帖子头部 -->
  <view class="post-header">
    <image class="post-author-avatar" catchtap="goToInfo" src="{{post.avatar}}" data-userid="{{post.appId}}" />
    <view class="post-meta">
      <view class="post-author-info">
        <text class="post-author">{{post.name}}</text>
        <text class="level-text">LV.{{post.grade}}</text>
      </view>
      <view wx:if="{{post.time === post.updateTime}}">
        <text class="post-time">{{post.time}}</text>
      </view>
      <view wx:else>
        <text class="post-time">上一次修改: {{post.updateTime}}</text>
      </view>
    </view>
  </view>

  <!-- 帖子内容 -->
  <view class="post-content">
    <text class="content-text" user-select="true">{{post.content}}</text>
  </view>

  <view class="divider"></view>

  <!-- 评论列表 -->
  <view class="comments-container">
    <block wx:for="{{visibleComments}}" wx:key="commentId">
      <view class="comment-block">
        <!-- 主评论 -->
        <view class="comment-item">
          <image class="comment-avatar" catchtap="goToInfo" src="{{item.avatar}}" data-userid="{{item.appId}}" />
          <view class="comment-main">
            <view class="comment-info">
              <text class="comment-name">{{item.appName}}</text>
              <text class="level-text">LV.{{item.grade}}</text>
              <view class="comment-actions">
                <image class="icon-button" src="/icon/like.png" bindtap="likeComment" data-id="{{item.commentId}}" />
                <text class="likes-count">{{item.likes}}</text>
                <image class="icon-button" src="/icon/reply.png" catchtap="openReplyPopup" data-id="{{item.commentId}}" data-name="{{item.appName}}" />
              </view>
            </view>
            <text class="post-time">{{item.createTime}}</text>
            <text class="content-text">{{item.content}}</text>
          </view>
        </view>
        <!-- 子评论 -->
        <view class="sub-comments" wx:if="{{item.subComments && item.subComments.length > 0}}">
          <block wx:for="{{item.visibleSubComments}}" wx:key="index">
            <view class="sub-comment-item">
              <text class="sub-comment-name">{{item.appName}}:</text>
              <text class="sub-comment-content">{{item.content}}</text>
            </view>
          </block>
          <view wx:if="{{item.subComments.length > 2}}" class="show-more-sub-comments" bindtap="goToCommentDetail" data-id="{{item.commentId}}">
            显示更多回复
          </view>
        </view>
      </view>
    </block>
  </view>

  <!-- 底部操作栏 -->
  <view class="bottom-bar" catchtap="cancelClosePopup">
    <!-- 普通状态下：显示点赞、分享、评论按钮 -->
    <view wx:if="{{!showReplyPopup}}" class="bottom-normal">
      <view class="comment-input" bindtap="handleTapCommentInput">
        点我发评论
      </view>
      <view class="bottom-actions">
        <view class="action-item" bindtap="sharePost">
          <image class="icon-button" src="/icon/share.png" />
        </view>
        <view class="action-item">
          <image class="icon-button" src="/icon/reply.png" bindtap="handleTapCommentInput" />
          <text class="action-number">{{post.comments || 0}}</text>
        </view>
        <view class="action-item">
          <image class="icon-button" src="{{ islike ? '/icon/islike.png' : '/icon/like.png' }}" bindtap="handleLikePost" />
          <text class="action-number">{{post.likes || 0}}</text>
        </view>
      </view>
    </view>

    <!-- 回复状态下：隐藏点赞、分享、评论，仅显示回复输入区 -->
    <view wx:if="{{showReplyPopup}}" class="bottom-reply">
      <view class="reply-container">
        <text class="reply-label">回复 {{replyTo}}：</text>
        <textarea class="reply-input" id="replyInput" value="{{replyContent}}" placeholder="请输入评论..." bindinput="onReplyInput" bindblur="onReplyBlur" bindfocus="onReplyFocus"></textarea>
      </view>
      <view class="submit-custom" bindtap="sendReply">提交</view>
    </view>
  </view>
</view>