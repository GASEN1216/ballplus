/* 容器 */
.activity-detail-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 60px;
}

/* 活动信息 */
.activity-detail {
  width: 92%;
  background-color: #fff;
  border-radius: 12px;
  padding: 25px;
  margin-top: 15px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 12px; /* 增加间距 */
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.08); /* 更柔和的阴影 */
  line-height: 1.2; /* 增加行高 */
}


/* 活动头像 */
.activity-cover {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin-bottom: 10px;
  align-self: center;
}

/* 标题 */
.activity-title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 10px;
  width: 100%;
}

/* 详细地址 */
.location-detail {
  color: #888;
  font-size: 14px;
}

/* 标签容器 */
.tag-container {
  display: flex;
  flex-wrap: wrap;
  margin-top: 10px;
}

/* 标签样式 */
.tag {
  padding: 5px 10px;
  margin-right: 5px;
  margin-bottom: 5px;
  border-radius: 5px;
  font-size: 12px;
  color: white;
  text-align: center;
}

/* 标签颜色 */
.type-tag { background-color: #f39c12; }
.limits-tag { background-color: #e74c3c; }
.level-tag { background-color: #3498db; }

/* 参与者部分 */
.participants-section {
  width: 90%;
  background-color: #fff;
  border-radius: 10px;
  padding: 15px;
  margin-top: 15px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

/* 参与者标题 */
.section-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 10px;
}

/* 参与者头像容器 */
.participants-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

/* 参与者头像框 */
.participant-box {
  width: 40px;
  height: 40px;
  border-radius: 8px;
  overflow: hidden;
  margin-right: 10px;
  margin-bottom: 10px;
  border: 2px solid #ddd;
}

/* 参与者头像 */
.participant-avatar {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 底部按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  padding: 10px 0;
  display: flex;
  justify-content: space-around;
  border-top: 1px solid #ddd;
}

.action-buttons button {
  flex: 1;
  margin: 0 5px;
  font-size: 16px;
}
