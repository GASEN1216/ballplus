/* 容器 */
.form-container {
  padding: 20px;
  background-color: #f9f9f9;
  border-radius: 10px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

/* 表单项 */
.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
  padding: 10px;
  background-color: #ffffff;
  border-radius: 8px;
  width: 100%; /* 确保容器不超出父级 */
  box-sizing: border-box;
}

/* 表单项 */
.form-item2 {
  display: flex;
  flex-direction: column;  /* 改为上下排列 */
  align-items: center;
  margin-bottom: 20px;
  padding: 10px;
  background-color: #ffffff;
  border-radius: 8px;
  width: 100%; /* 确保容器不超出父级 */
  box-sizing: border-box;
}

/* 标签 */
.form-label {
  flex-shrink: 0; /* 保证标签宽度固定 */
  flex: 0 0 120px;
  font-size: 15px;
  font-weight: 600;
  color: #333333;
  margin-right: 10px;
}

/* 输入框、选择器、文本域 */
.form-input,
.form-textarea,
.picker {
  flex: 1;
  padding: 10px;
  font-size: 14px;
  color: #666666;
  border: 1px solid #e0e0e0;
  border-radius: 5px;
  background-color: #f9f9f9;
  transition: border-color 0.3s;
}

.form-input:focus,
.form-textarea:focus,
.picker:focus {
  border-color: #007aff;
}

/* 文本域 */
.form-textarea {
  height: 100px;
  resize: none;
}

/* 链接 */
.form-link {
  color: #007aff;
  font-size: 14px;
  text-decoration: underline;
  cursor: pointer;
}

/* 提交按钮 */
.submit-button {
  width: 100%;
  padding: 12px;
  font-size: 16px;
  font-weight: bold;
  color: #ffffff;
  background-color: #007aff;
  text-align: center;
  border-radius: 8px;
  box-shadow: 0 4px 6px rgba(0, 122, 255, 0.4);
  transition: background-color 0.3s;
}

.submit-button:active {
  background-color: #005bb5;
}

/* 切换更多设置 */
.more-settings-toggle {
  text-align: center;
  padding: 10px 0;
  font-size: 14px;
  color: #666666;
  cursor: pointer;
}

.more-settings-toggle:hover {
  color: #007aff;
}

/* 提示文字 */
.helper-text {
  font-size: 12px;
  color: #999999;
  margin-top: 5px;
}

.form-input-container {
  flex: 1; /* 填满剩余空间 */
  display: flex;
  align-items: center;
  overflow: hidden; /* 强制隐藏超出部分 */
  width: 100%;
}

.form-display {
  flex: 1; /* 占满剩余空间 */
  font-size: 14px;
  color: #333;
  overflow: hidden; /* 超出隐藏 */
  text-overflow: ellipsis; /* 显示省略号 */
  white-space: nowrap; /* 禁止换行 */
  max-width: 100%; /* 强制不超过容器宽度 */
  line-height: 24px; /* 与文字高度一致 */
  cursor: pointer; /* 鼠标显示为可点击 */
}
.form-disabled {
  flex: 1; /* 占满剩余空间 */
  font-size: 14px;
  color: #333;
  overflow: hidden; /* 超出隐藏 */
  text-overflow: ellipsis; /* 显示省略号 */
  white-space: nowrap; /* 禁止换行 */
  max-width: 100%; /* 强制不超过容器宽度 */
  line-height: 24px; /* 与文字高度一致 */
  pointer-events: none; /* 禁用点击 */
  cursor: not-allowed; /* 鼠标显示不可点击 */
}
.info-link {
  font-size: 14px;
  color: #37d0ff; /* 淡蓝色 */
  transform: translateY(-5px);
}