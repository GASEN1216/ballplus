/* 容器样式 */
.complaint-container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding-bottom: 40rpx;
}

/* 信息卡片 */
.info-card {
  background: linear-gradient(135deg, #3b87dd, #1a5fa9);
  color: white;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
}

.card-header {
  display: flex;
  align-items: center;
}

.icon-wrapper {
  margin-right: 20rpx;
}

.icon-circle {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-text {
  font-size: 40rpx;
  font-weight: bold;
}

.header-text {
  flex: 1;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  opacity: 0.8;
}

/* 内容区块样式 */
.section {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  align-items: baseline;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.section-subtitle {
  font-size: 24rpx;
  color: #999;
  margin-left: 12rpx;
}

/* 头像列表样式 */
.avatar-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.avatar-item {
  width: 120rpx;
  position: relative;
  margin: 10rpx;
  text-align: center;
  transition: all 0.3s;
}

.avatar-item.selected {
  transform: scale(1.05);
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid #eee;
  background-color: #f1f1f1;
}

.avatar-item.selected .avatar {
  border-color: #3b87dd;
}

.avatar-name {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.check-icon {
  position: absolute;
  right: 10rpx;
  top: 0;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background-color: #3b87dd;
  display: flex;
  align-items: center;
  justify-content: center;
}

.check-inner {
  width: 16rpx;
  height: 8rpx;
  border-left: 3rpx solid white;
  border-bottom: 3rpx solid white;
  transform: rotate(-45deg) translateY(-2rpx);
}

/* 标签列表样式 */
.tag-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -8rpx 20rpx;
}

.tag {
  background-color: #f0f3f8;
  border-radius: 30rpx;
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  color: #666;
  margin: 8rpx;
  transition: all 0.2s;
}

.tag:active {
  background-color: #e0e6f0;
  color: #3b87dd;
}

/* 文本输入区域 */
.textarea-container {
  position: relative;
  margin-top: 20rpx;
}

.input-textarea {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  border: 1rpx solid #eaecef;
}

.word-count {
  position: absolute;
  bottom: 10rpx;
  right: 20rpx;
  font-size: 24rpx;
  color: #999;
}

/* 按钮样式 */
.button-container {
  margin: 40rpx 20rpx;
  text-align: center;
}

.submit-button {
  width: 90%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: white;
  border: none;
  margin-bottom: 16rpx;
  display: flex;          /* 启用弹性布局 */
  justify-content: center;/* 水平居中 */
  align-items: center;   /* 垂直居中 */
}

.submit-button.active {
  background: linear-gradient(135deg, #3b87dd, #1a5fa9);
  box-shadow: 0 6rpx 20rpx rgba(59, 135, 221, 0.3);
}

.submit-button.disabled {
  background: #cccccc;
  color: #ffffff;
  opacity: 0.7;
  box-shadow: none;
}

.button-tips {
  font-size: 24rpx;
  color: #999;
} 