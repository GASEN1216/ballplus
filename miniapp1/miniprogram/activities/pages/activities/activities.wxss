page {
  background-color: #f8f9fa;
}
/* 容器样式 */
.container {
  padding: 20rpx;
  background-color: #f8f9fa;
}

/* 顶部标签 */
.tabs-container {
  background-color: #ffffff;
  margin-bottom: 20rpx;
  width: 100%;
}

.tabs {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 30rpx;
  color: #999999;
}

.tab.active {
  color: #007aff;
  font-weight: bold;
  border-bottom: 4rpx solid #007aff;
}

/* 分隔条 */
.divider {
  height: 1rpx;
  background-color: #dddddd;
  margin: 10rpx 0;
}

/* 活动列表样式 */
.activity-list {
  margin-top: 10px;
}

.activity-card {
  display: flex;
  position: relative;
  gap: 10px;
  padding: 10px;
  margin-bottom: 15px;
  border: 1px solid #ddd;
  border-radius: 10px;
  background-color: #fff;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}
/* 头像样式 */
.activity-avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  border: 1px solid #ccc;
  object-fit: cover;
}

/* 活动信息 */
.activity-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 5px;
}

.activity-name {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.activity-meta {
  font-size: 14px;
  color: #666;
}

.activity-remarks {
  font-size: 14px;
  color: #888;
  margin-top: 5px;
}
.no-activity {
  text-align: center;
  color: #999;
  margin-top: 20px;
  font-size: 16px;
}