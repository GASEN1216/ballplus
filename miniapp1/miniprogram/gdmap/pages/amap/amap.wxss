.map_container{
  position: absolute;
  top: 0;
  bottom: 80px;
  left: 0;
  right: 0;
}
.map{
  width: 100%;
  height: 100%;
}
.map_text{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0px;
  height: 80px;
  background: #fff;
  padding: 0 15px;
}
text{
  margin: 5px 0;
  display: block;
  font-size:12px;
}
.h1{
  margin: 15px 0;
  font-size:15px;
}
/* 搜索栏样式 */
.search_container {
  display: flex;
  align-items: center;
  padding: 10px;
  background-color: #ffffff;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  margin-bottom: 10px;
}
.search_input {
  flex: 1;
  height: 30px;
  padding: 0 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  font-size: 14px;
}
.navigate-btn {
  display: inline-block;
  margin-left: 10px;
  padding: 4px 8px;
  background-color: #0081ff;
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 12px;
}

.activity_item {
  margin-bottom: 10px;
}
.activity_time {
  font-weight: bold;
}
.divider {
  border-top: 1px solid #ccc;
  margin-top: 5px;
}
/* 活动列表样式 */
.activity-list {
  margin-top: 10px;
}

.activity-card {
  display: flex;
  position: relative;
  gap: 10px;
  padding: 10px;
  margin-bottom: 15px;
  border: 1px solid #ddd;
  border-radius: 10px;
  background-color: #fff;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}
/* 头像样式 */
.activity-avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  border: 1px solid #ccc;
  object-fit: cover;
}

/* 活动信息 */
.activity-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 5px;
}

.activity-name {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.activity-meta {
  font-size: 14px;
  color: #666;
}

.activity-remarks {
  display: -webkit-box;        /* 创建一个伸缩容器 */
  -webkit-box-orient: vertical; /* 设置伸缩方向为纵向 */
  overflow: hidden;            /* 隐藏溢出部分 */
  text-overflow: ellipsis;     /* 超出部分显示省略号 */
  -webkit-line-clamp: 2;           /* 限制最多显示两行 */
  white-space: normal;         /* 允许文本换行 */
  line-height: 1.5;            /* 设置行高（可根据需要调整） */
  max-height: 3.3em;           /* 设置最大高度（可根据需要调整） */
  font-size: 14px;
  color: #888;
  margin-top: 5px;
}
.no-activity {
  text-align: center;
  color: #999;
  margin-top: 20px;
  font-size: 16px;
}