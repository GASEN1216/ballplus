/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
/* app.wxss */
.tabBar {
  height: 60px;
  background-color: #ffffff;
  border-top: 1px solid #ccc;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.tabBar .icon {
  width: 24px;
  height: 24px;
}

.tabBar .text {
  font-size: 12px;
  color: #666666;
}

.tabBar .text.selected {
  color: #ff3e3e;
}


